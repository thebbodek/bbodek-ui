{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["prettier", "react"],
  "rules": {
    "react/jsx-first-prop-new-line": ["error", "multiline"],
    "@typescript-eslint/no-inferrable-types": "off",
    "semi": [2, "always"]
  },
  "extends": ["plugin:prettier/recommended", "prettier"]
}
